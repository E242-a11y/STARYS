    body {
      font-family: Arial, sans-serif;
      background-color: #121212;
      color: #e0e0e0;
      line-height: 1.6;
    }
    /* Cabeçalho */
    header {
      background-color: #1f1f1f;
      padding: 20px;
      text-align: center;
    }
    header h1 {
      font-size: 3rem;
      letter-spacing: 2px;
    }
    header p {
      margin-top: 10px;
      font-size: 1.2rem;
      color: #aaaaaa;
    }
    /* Container principal */
    .container {
      width: 90%;
      max-width: 1200px;
      margin: 30px auto;
      padding: 10px;
    }
    /* Lista de produtos */
    .product-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }
    .product {
      background-color: #1f1f1f;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
      width: 300px;
      margin: 20px;
      overflow: hidden;
      transition: transform 0.3s;
    }
    .product:hover {
      transform: scale(1.03);
    }
    .product img {
      width: 100%;
      height: auto;
      display: block;
    }
    .product-info {
      padding: 15px;
    }
    .product-info h2 {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }
    .product-info p {
      font-size: 0.95rem;
      color: #cccccc;
      margin-bottom: 15px;
    }
    .price {
      font-size: 1.2rem;
      color: #ff9800;
      margin-bottom: 10px;
    }
    .buy-btn {
      display: block;
      text-align: center;
      padding: 10px 0;
      background-color: #ff9800;
      color: #121212;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      transition: background-color 0.3s;
    }
    .buy-btn:hover {
      background-color: #e68900;
    }
    /* Rodapé */
    footer {
      background-color: #1f1f1f;
      text-align: center;
      padding: 20px;
      margin-top: 40px;
    }
    footer p {
      font-size: 0.9rem;
      color: #aaaaaa;
    }
  </style>
</head>
